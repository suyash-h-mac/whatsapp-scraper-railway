FROM python:3.10-slim

# Install Chromium + driver + dependencies for headless operation
RUN apt-get update \
    && apt-get install -y wget unzip curl chromium chromium-driver \
       libnss3 libglib2.0-0 libgconf-2-4 libfontconfig1 libx11-6 libxrender1 libxss1 \
    && ln -s /usr/lib/chromium/chromedriver /usr/bin/chromedriver

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

CMD ["python", "main.py"]
